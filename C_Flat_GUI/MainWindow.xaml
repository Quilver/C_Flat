<ui:UiWindow x:Class="C_Flat.MainWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_Flat"
        mc:Ignorable="d"
        Background="{ui:ThemeResource ApplicationBackgroundBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        Height="800"
        Width="1200"
        Closing="OnWindowClose">
        
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <ui:TitleBar
                        VerticalAlignment="Center"
                        Title="C_Flat Transpiler"
                        Padding="10,0,0,3"
                        Grid.Row="0">
                </ui:TitleBar>
                <Grid
                        x:Name="MainGrid"
                        Grid.Row="1"
                        Margin="10"
                        VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <ui:Card Grid.Row="0" Margin="5,0,5,0">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label>C__Flat Source Input</Label>
                                        <ui:TextBox Grid.Row="1"
                                                    Background="#2CFFFFFF"
                                                    Foreground="White" 
                                                    Margin="5"
                                                    Name="SourceInput"
                                                    TextWrapping="NoWrap"
                                                    AcceptsReturn="True"
                                                    AcceptsTab="True"
                                                    VerticalScrollBarVisibility="Hidden"
                                                    BorderThickness="0"
                                                    MinHeight="200"/>
                                </Grid>
                        </ui:Card>
                        <ui:Card Grid.Row="1" Margin="5,10,5,10">
                                <Grid>
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions> 
                                        <ui:Button Grid.Column="0" Click="ButtonTranspile_Click" Margin="10" HorizontalAlignment="Center">Transpile Code</ui:Button>
                                        <ui:Button Grid.Column="1" Click="ButtonTranspileAndRun_Click" Margin="5" HorizontalAlignment="Center">Run Transpiled Code</ui:Button>

                                </Grid>
                        </ui:Card>
                        <ui:Card Grid.Row="2" Margin="5,0,5,0">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label>Transpiler Output</Label>
                                        <ui:TextBox Grid.Row="1"
                                                    Background="#2CFFFFFF"
                                                    Foreground="White" 
                                                    Margin="5"
                                                    Name="TranspilerOutput"
                                                    BorderThickness="0"
                                                    MinHeight="150"
                                                    IsEnabled="False"
                                                    TextWrapping="Wrap"/>
                                </Grid>
                        </ui:Card>
                        <ui:Card Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="5,10,5,0">
                                <Grid>
                                        <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label>Transpiled Code execution output</Label>
                                        <ui:TextBox Grid.Row="1"
                                                    Background="#2CFFFFFF"
                                                    Foreground="White" 
                                                    Margin="5"
                                                    Name="ExecutionOutput"
                                                    BorderThickness="0"
                                                    MinHeight="600"
                                                    IsEnabled="False"
                                                    TextWrapping="Wrap"/>
                                </Grid>
                        </ui:Card>
                </Grid>
        </Grid>
</ui:UiWindow>
