<Window x:Class="C_Flat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Closing="OnWindowClose"  
        xmlns:local="clr-namespace:C_Flat"
        mc:Ignorable="d"
        Title="C_Flat Transpiler" Height="600" Width="1200">
    <Grid Margin="10">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Label Grid.ColumnSpan="2">C__Flat source input</Label>
        <TextBox Grid.ColumnSpan="2" Grid.Row="1" Margin="0,10,10,10"
                 Name="SourceInput"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Visible"
        />
        
        <Button Grid.Row="2" x:Name="BtnTranspile" Margin="0,0,10,0" Click="ButtonTranspile_Click">Transpile Code</Button>
        <Button Grid.Column="1" Grid.Row="2" x:Name="BtnTranspileAndRun" Margin="10,0,10,0" Click="ButtonTranspileAndRun_Click">Run transpiled Code</Button>

        <Label Grid.ColumnSpan="2" Grid.Row="3">C__Flat transpiler output</Label>
        <TextBox Grid.ColumnSpan="2" Grid.Row="4" Margin="0,10,10,0"
                 Name="Output"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True"
        />
        
        <Label Grid.Column="2" Grid.ColumnSpan="2">C__Flat Transpiled Code execution output</Label>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="4" Margin="10,10,0,0"
                 Name="ExecutionOutput"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True"
        />
    </Grid>
</Window>
